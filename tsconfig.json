{
  "compilerOptions": {
    /* Compliter */
    "module": "CommonJS",
    "target": "ES2020",
    "strict": true,
    "lib": ["ESNext", "WebWorker"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "declaration": false,
    "outDir": "app",
    "rootDir": "src",

    /* Typing */
    "noImplicitAny": true
  },
  "exclude": ["node_modules", "app/**", "package.json", "typescript/**"],
  "include": ["src/**/*.ts"]
}
